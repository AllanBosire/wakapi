meta {
  name: Get stats (filtered)
  type: http
  seq: 4
}

get {
  url: {{BASE_URL}}/api/compat/wakatime/v1/users/current/stats?project=wakapi&language=Go
  body: none
  auth: bearer
}

params:query {
  project: wakapi
  language: Go
}

auth:bearer {
  token: {{WRITEUSER_TOKEN}}
}

script:post-response {
  test("Status code is 200", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("Correct content", function () {
      const jsonData = res.getBody();
      expect(jsonData.data.projects.length).to.eql(1);
      expect(jsonData.data.total_seconds).to.gt(0);
      expect(jsonData.data.branches.length).to.eql(1);
  });
}
